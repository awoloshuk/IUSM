{
    "name": "mnist_upsampled",
    "n_gpu": 0,
    
    "arch": {
        "type": "pretrainedModel",
        "args": {}
    },
    "data_loader": {
        "type": "mnist_DataLoader_upsampled",
        "args":{
            "data_dir": "data/",
            "csv_path": "data/MNIST/processed/training.pt",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 7,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
