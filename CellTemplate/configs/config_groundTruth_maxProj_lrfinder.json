{
    "name": "GroundTruth_maxProjection",
    "n_gpu": 1,
    
    "arch": {
        "type": "heatmapModel",
        "args": {}
    },
    "data_loader": {
        "type": "groundTruth_DataLoader",
        "args":{
            "data_dir": "data/max_projection_060419/",
            "csv_path": "data/max_projection_060419/Train.csv",
            "batch_size": 400,
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 2,
            "training": true
        }
    },
    "data_loader_test": { 
        "type": "groundTruth_DataLoader",
        "args":{
            "data_dir": "data/max_projection_060419/", 
            "csv_path": "data/max_projection_060419/Test.csv", 
            "batch_size": 100,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2,
            "training": false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-7,
            "weight_decay": 0,
            "momentum": 0.9
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "my_metric", "f1", "balanced_accuracy", "precision", "recall"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 25,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 25,
        
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}

